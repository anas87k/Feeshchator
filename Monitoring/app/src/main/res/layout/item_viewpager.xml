<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button
        android:id="@+id/btnchart"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/shape_add_button"
        android:layout_margin="5dp"
        android:textColor="@color/colorWhite"
        android:text="LIHAT GRAFIK"
        android:fontFamily="@font/poppins_medium"
        android:backgroundTint="@color/colorLayout1"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cvvp1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cardview_light_background"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tittle_view"
            android:rowCount="1"
            android:columnCount="2"
            android:layout_margin="10dp">
            <TextView
                android:gravity="center_horizontal"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_medium"
                android:layout_width="100dp"
                android:textColor="@color/colorSecondaryText"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="Waktu"/>
            <TextView
                android:id="@+id/jdl"
                android:gravity="center_horizontal"
                android:textSize="14sp"
                android:textColor="@color/colorSecondaryText"
                android:fontFamily="@font/poppins_medium"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="Temperature (Â°C)"/>
        </GridLayout>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvvv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/cvvp1"/>

</LinearLayout>