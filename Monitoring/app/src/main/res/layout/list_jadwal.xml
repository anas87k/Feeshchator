<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvlist"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="5dp"
        android:background="@drawable/shape_cardview">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtnama"
                    android:layout_marginHorizontal="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="12 November 2018"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txtdurasi"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="3dp"
                        android:text="Durasi"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@android:color/holo_orange_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/statustxt"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="4dp"
                        android:text="Planned"
                        android:gravity="end"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="15sp"
                        android:textColor="@android:color/holo_orange_dark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txttgl"
                    android:layout_marginHorizontal="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/poppins_regular"
                    android:ellipsize="end"
                    android:layout_alignStart="@+id/info_btn"
                    android:text="Selasa, 28 Juli 2020 08.10 WIB"
                    android:textSize="13sp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>