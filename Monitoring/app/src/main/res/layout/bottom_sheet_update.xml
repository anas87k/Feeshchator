<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="0dp"
    android:padding="15dp"
    android:background="@drawable/shape_bottom_sheet"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:id="@+id/bsupd">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Jadwal Pemberian Pakan"
        android:textAllCaps="true"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="13sp"
        android:layout_marginBottom="5dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/namaupdate"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingHorizontal="15dp"
        android:fontFamily="@font/poppins_regular"
        android:backgroundTint="@color/colorDivider"
        android:background="@drawable/shape_add_button"
        android:hint="Nama"
        android:layout_marginBottom="7dp"/>


    <EditText
        android:id="@+id/tglupdate"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingHorizontal="15dp"
        android:fontFamily="@font/poppins_regular"
        android:clickable="true"
        android:focusable="false"
        android:inputType="none"
        android:backgroundTint="@color/colorDivider"
        android:background="@drawable/shape_add_button"
        android:hint="Tanggal"
        android:layout_marginBottom="7dp"/>


    <EditText
        android:id="@+id/durasiupdate"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingHorizontal="15dp"
        android:fontFamily="@font/poppins_regular"
        android:inputType="number"
        android:backgroundTint="@color/colorDivider"
        android:background="@drawable/shape_add_button"
        android:hint="Durasi (detik)"/>

    <Button
        android:id="@+id/updatejadwal"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="10dp"
        android:textColor="@color/cardview_light_background"
        android:text="Update"
        android:background="@drawable/shape_add_button"/>

    <Button
        android:id="@+id/deletejadwal"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="7dp"
        android:textColor="@color/cardview_light_background"
        android:text="Delete"
        android:backgroundTint="@color/colorLayout2"
        android:background="@drawable/shape_add_button"/>
</LinearLayout>